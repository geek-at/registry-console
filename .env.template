# Registry Console Environment Configuration
# Copy this file to .env and modify the values as needed

# Registry Configuration
REGISTRY_URL=your-registry-url.com
REGISTRY_USERNAME=your-username
REGISTRY_PASSWORD=your-password
PORT=3000
NODE_ENV=development

# Application Settings
# These settings can be changed without rebuilding the container
DEFAULT_THEME=light           # Options: light, dark, auto
AUTO_REFRESH_INTERVAL=300000  # Milliseconds (5 minutes = 300000ms)
AUTO_REFRESH_ENABLED=true     # Enable/disable automatic refresh
NOTIFICATIONS_ENABLED=true    # Enable/disable notifications
CACHE_ENABLED=true           # Enable/disable caching
CACHE_TTL=300000            # Cache TTL in milliseconds (5 minutes = 300000ms)
STATISTICS_EXPORT_ENABLED=true    # Enable/disable statistics export
SETTINGS_EXPORT_ENABLED=true      # Enable/disable settings export

# Example configurations for different environments:

# Development Environment
# DEFAULT_THEME=light
# AUTO_REFRESH_INTERVAL=60000  # 1 minute for development
# CACHE_ENABLED=false          # Disable cache for development

# Production Environment
# DEFAULT_THEME=dark
# AUTO_REFRESH_INTERVAL=600000  # 10 minutes for production
# CACHE_ENABLED=true
# CACHE_TTL=900000             # 15 minutes cache for production

# Minimal Environment (for resource-constrained containers)
# AUTO_REFRESH_ENABLED=false
# NOTIFICATIONS_ENABLED=false
# CACHE_ENABLED=false
# STATISTICS_EXPORT_ENABLED=false
